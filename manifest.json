{
  "manifest_version": 3,
  "name": "Markdown Link Copier",
  "version": "1.0",
  "description": "Copy page title and URL in markdown format to clipboard",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}